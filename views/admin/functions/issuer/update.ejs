<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title + " - " + page; %>
  </title>
  <!-- styles from vendors  -->
  <%- include('../../layouts/styles.ejs'); %>
</head>

<body>
  <%- include('../../partials/navbar.ejs') %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2 px-0">
        <%- include('../../partials/sidebar.ejs'); %>
      </div>
      <div class="col-md-10 px-0">
        <div class="container">
        <!-- main content -->
        <h3 class = "pt-3">Chình sửa thông tin trường</h3>
        <hr >
        <div class="col-10">
          <form action="/admin/issuer/create" method="POST" name="frmCreate" id="frmCreate" novalidate="novalidate">
            <input type="hidden" name="issuer_id" value="<%= issuer.issuer_id %>">
            <div class="form-group">
              <label for="issuer_code">Mã đơn vị</label>
              <input type="text" class="form-control" id="issuer_code" name="issuer_code" value="<%= issuer.issuer_code %>">
            </div>
            <div class="form-group">
              <label for="issuer_name">Tên đơn vị</label>
              <input type="text" class="form-control" id="issuer_name" name="issuer_name" value="<%= issuer.issuer_name %>">
            </div>
            <div class="form-group">
              <label for="issuer_address">Địa chỉ</label>
              <input type="text" class="form-control" id="issuer_address" name="issuer_address" value="<%= issuer.issuer_address %>">
            </div>
            <div class="form-group">
              <label for="issuer_phone">Số điện thoại</label>
              <input type="text" class="form-control" id="issuer_phone" name="issuer_phone" value="<%= issuer.issuer_phone %>">
            </div>
            <div class="form-group">
              <label for="issuer_fax">Fax</label>
              <input type="text" class="form-control" id="issuer_fax" name="issuer_fax" value="<%= issuer.issuer_fax %>">
            </div>
            <div class="form-group">
              <label for="issuer_email">Email</label>
              <input type="text" class="form-control" id="issuer_email" name="issuer_email" value="<%= issuer.issuer_email %>">
            </div>
            <button class="btn btn-primary" name="btnSave">Lưu</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- script form vendor -->
  <%- include('../../layouts/scripts.ejs'); %>

    <!-- Page's scripts -->

</body>

</html>