<table class="table table-borderless">
  <tbody>
    <tr >
      <th colspan="2" scope="col"><h4 class="pb-3 border-bottom">THÔNG TIN CHI TIẾT CỦA CHỨNG CHỈ</h4></th>
    </tr>
    <tr>
      <th>Số hiệu</th>
      <td><%= cert_info.number %></td>
    </tr>
    <tr>
      <th>Loại</th>
      <td><%= cert_info.cert_kind %></td>
    </tr>
    <tr>
      <th>Tên chứng chỉ</th>
      <td><%= cert_info.cert_name %></td>
    </tr>
    <tr>
      <th>Xếp loại</th>
      <td><%= cert_info.classification %></td>
    </tr>
    <tr>
      <th>Ngày ký</th>
      <td><%= cert_info.signday %></td>
    </tr>
    <tr>
      <th>Số vào sổ </th>
      <td><%= cert_info.regno %></td>
    </tr>
    <tr >
      <th colspan="2"><h6 class="ps-3 border-start">THÔNG TIN NGƯỜI NHẬN CHƯNG CHỈ</h6></th>
    </tr>
    <tr>
      <th>Họ tên</th>
      <td><%= cert_info.student_name %></td>
    </tr>
    <tr>
      <th>Giới tính</th>
      <td><%= cert_info.student_gender %></td>
    </tr>
    <tr>
      <th>Ngày sinh</th>
      <td><%= cert_info.student_dayofbirth %></td>
    </tr>
    <tr>
      <th>Nơi sinh</th>
      <td><%= cert_info.student_placeofbirth %></td>
    </tr>
    <tr>
      <th>Số căn cước</th>
      <td><%= cert_info.student_idNumber %></td>
    </tr>
    
  </tbody>
</table>